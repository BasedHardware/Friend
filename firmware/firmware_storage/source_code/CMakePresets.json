{
    "version": 2,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20
    },
    "configurePresets": [
        {
            "name": "build",
            "displayName": "Build for XIAO BLE Sense",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "NCS_TOOLCHAIN_VERSION": "NONE",
                "BOARD": "xiao_ble_sense",
                "CACHED_CONF_FILE": "${sourceDir}/prj.conf",
                "DTC_OVERLAY_FILE": "${sourceDir}/xiao_ble_sense.overlay"
            }
        }
    ]
}